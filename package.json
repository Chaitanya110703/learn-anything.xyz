{
  "name": "learn-anything",
  "scripts": {
    "seed-clone": "git clone https://github.com/learn-anything/seed",
    "seed-update": "cd seed && git pull",
    "dev-setup": "pnpm run seed-clone",
    "app:dev": "cd app && pnpm tauri:dev",
    "web:dev": "cd website && pnpm run dev",
    "web:build": "cd website && solid-start build",
    "web:start": "cd website && solid-start start",
    "db:init": "cd edgedb && edgedb project init",
    "db:ui": "cd edgedb && edgedb ui",
    "db:sync": "cd edgedb/sync && tsx sync.ts",
    "db:watch": "cd edgedb && edgedb watch",
    "db:migrate": "cd edgedb && edgedb migration create && edgedb migrate && npx @edgedb/generate edgeql-js --target ts",
    "db:ts-generate": "cd edgedb && npx @edgedb/generate edgeql-js --target ts",
    "grafbase": "npx grafbase@latest dev",
    "ts-run": "tsx run.ts",
    "test": "vitest",
    "test-rust-wiki": "cd app/src-tauri/crates/wiki/ && cargo watch -q -- sh -c \"tput reset && cargo test -q --lib\""
  },
  "devDependencies": {
    "@edgedb/generate": "^0.3.3",
    "@grafbase/sdk": "~0.6.1",
    "autoprefixer": "^10.4.15",
    "mdast-util-from-markdown": "^2.0.0",
    "mdast-util-to-markdown": "^2.1.0",
    "mdast-util-to-string": "^4.0.0",
    "postcss": "^8.4.29",
    "solid-start-node": "^0.3.5",
    "tailwindcss": "^3.3.3",
    "tsx": "^3.12.8",
    "typescript": "^5.2.2",
    "vite": "^4.4.9"
  },
  "dependencies": {
    "@codemirror/view": "^6.18.0",
    "@hono/node-server": "^1.1.1",
    "@solid-primitives/event-listener": "^2.3.0",
    "@solid-primitives/keyboard": "^1.2.5",
    "@solidjs/meta": "^0.28.6",
    "@solidjs/router": "^0.8.3",
    "@types/better-sqlite3": "^7.6.4",
    "better-sqlite3": "^8.6.0",
    "bun-types": "^0.8.1",
    "clipboardy": "^3.0.0",
    "clsx": "^2.0.0",
    "dotenv": "^16.3.1",
    "edgedb": "^1.3.5",
    "fava": "^0.3.1",
    "graphql-request": "^6.1.0",
    "hono": "^3.5.8",
    "jose": "^4.14.6",
    "micromark": "^4.0.0",
    "mri": "^1.2.0",
    "prettier": "^3.0.3",
    "solid-codemirror": "^2.3.0",
    "solid-js": "^1.7.11",
    "solid-markdown": "^1.2.2",
    "solid-start": "^0.3.5",
    "solid-start-cloudflare-pages": "^0.3.5",
    "sqlite3": "^5.1.6",
    "tinybase": "^4.1.4",
    "undici": "^5.23.0",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "0.34.3",
    "watcher": "^2.3.0",
    "zod": "^3.22.2"
  },
  "prettier": {
    "semi": false
  },
  "engines": {
    "node": ">=18"
  }
}
